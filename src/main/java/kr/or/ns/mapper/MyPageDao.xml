<mapper namespace="kr.or.ns.dao.MyPageDao">

<!-- 회원정보 가져오기 -->
	<select id="getUsers" resultType="kr.or.ns.vo.Users">
	select * from users
		join skill on users.user_id = skill.user_id 
		where users.user_id = #{user_id}
	</select>

