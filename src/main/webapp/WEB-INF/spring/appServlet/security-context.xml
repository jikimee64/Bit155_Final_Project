<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:context="http://www.springframework.org/schema/context"
	xmlns:security="http://www.springframework.org/schema/security"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans 
                           http://www.springframework.org/schema/beans/spring-beans.xsd
                           http://www.springframework.org/schema/context 
                           http://www.springframework.org/schema/context/spring-context.xsd
                           http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd">

	<security:http>
	
		<security:access-denied-handler  error-page="/403.do"/>
	
		<security:csrf disabled="true" />
		<!-- default-target-url : 로그인이 성공한 경우 호출할 주소  -->
		<security:form-login
			username-parameter="user_id"
			password-parameter="user_pwd"
			default-target-url="" 
			login-page="/member/login.do"
			authentication-success-handler-ref="loginSuccessHandler"
			authentication-failure-handler-ref="loginFailureHandler"
		/> 
		<security:logout logout-success-url="/user/main.do" />
		
		<!-- 비로그인 막는 페이지..   -->
	<!-- 온라인 게시판 게시글 등록  -->
 	<security:intercept-url
			pattern="/lecture/**.do" access="hasRole('ROLE_USER')" />  
			
	<!-- 스터디 게시판 게시글 등록  -->
 	<security:intercept-url
			pattern="/board/**.do" access="hasRole('ROLE_USER')" />  
	<!-- 마이페이지 -->
	<security:intercept-url
			pattern="/mypage/**.do" access="hasRole('ROLE_USER')" /> 
			
	<!-- 관리자페이지 -->
	<security:intercept-url
			pattern="/manager/**.do" access="hasRole('ROLE_ADMIN')" />
			
			<!-- 스터디모집하기 버튼  -->
		<!-- <security:intercept-url
			pattern="/board/*Detail.do" access="hasRole('ROLE_USER')" />
		<security:intercept-url pattern="/admin/**"
			access="hasRole('ROLE_ADMIN')" /> -->
			
			
			
	
	</security:http>
	<!-- enabled가 1인것만 로그인.. 0인 아이디로 로그인할 시 로그인 에러 터짐  -->
	<security:authentication-manager>
		<security:authentication-provider>
			<security:jdbc-user-service
				data-source-ref="driverManagerDataSource"
				users-by-username-query="SELECT USER_ID, USER_PWD AS PASSWORD, enabled FROM users where user_id=?"

				authorities-by-username-query="select u.USER_ID , a.USER_ROLE  
         										  from users u join authorities a 
        										   on u.user_id = a.user_id 
       											    where u.user_id=?" />

			<!-- 이사람이 정말 우리사이트 사용자인지 판단 -->
			<security:password-encoder
				ref="bCryptPasswordEncoder" />
		</security:authentication-provider>

	</security:authentication-manager>

	<bean id="loginSuccessHandler" class="kr.or.ns.interceptor.LoginSuccessHandler">
	    <!-- <property name="loginEmail" value="user_email"/> -->
	    <property name="defaultUrl" value="/user/main.do"/> 
	</bean>
	
<bean id="loginFailureHandler" class="kr.or.ns.interceptor.LoginFailureHandler">
	    <property name="loginidname" value="user_id"/>
	    <property name="loginpwdname" value="user_pwd"/>
	    <property name="errormsgname" value="ERRORMSG"/>
	    <property name="defaultFailureUrl" value="/member/loginFail.do"/> 
	</bean>
	

</beans>
